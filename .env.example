# Kimi K2.5 Configuration

# Moonshot AI Platform API (Recommended)
MOONSHOT_API_KEY=your-moonshot-api-key-here
MOONSHOT_API_BASE=https://api.moonshot.cn/v1

# Together AI (Alternative)
TOGETHER_API_KEY=your-together-api-key-here

# Model Selection
KIMI_MODEL=kimi-k2.5
KIMI_MAX_TOKENS=4096
KIMI_TEMPERATURE=0.7

# Agent Swarm Configuration
AGENT_SWARM_MAX_AGENTS=100
AGENT_SWARM_PARALLEL_EXECUTION=true
AGENT_SWARM_TIMEOUT=300

# Local Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=kimi-k2.5:cloud

# Logging
LOG_LEVEL=INFO
LOG_FILE=kimi.log

# ============================================================================
# Authentication & Security (REQUIRED for production)
# ============================================================================
# JWT secret key for signing tokens (generate with: python -c "import secrets; print(secrets.token_urlsafe(64))")
KIMI_API_SECRET_KEY=

# Static API key for simple authentication (alternative to JWT)
KIMI_API_KEY=

# CORS allowed origins (comma-separated)
KIMI_CORS_ORIGINS=http://localhost:8000,http://localhost:3000

# ============================================================================
# Database Credentials (REQUIRED)
# ============================================================================
POSTGRES_USER=
POSTGRES_PASSWORD=

# Redis password (REQUIRED)
REDIS_PASSWORD=

# Grafana admin password (REQUIRED)
GRAFANA_PASSWORD=

# ============================================================================
# File System Security
# ============================================================================
# Allowed directories for file operations (comma-separated)
KIMI_ALLOWED_FS_DIRS=/app/data,/app/uploads,/tmp/kimi

# Maximum file size in bytes (default: 10MB)
KIMI_MAX_FILE_SIZE=10485760

# Enable API docs (set to "true" only in development)
KIMI_ENABLE_DOCS=false

# ============================================================================
# Test Timeout Configuration
# ============================================================================
# Configure test timeouts based on environment performance characteristics.
# All values are in milliseconds.

# Navigation timeout - time to wait for page navigation to complete (default: 5000ms)
TEST_TIMEOUT_NAVIGATION=5000

# Animation timeout - time to wait for CSS animations/transitions (default: 1500ms)
TEST_TIMEOUT_ANIMATION=1500

# Stabilization timeout - time to wait for UI to stabilize after interactions (default: 2000ms)
TEST_TIMEOUT_STABILIZATION=2000

# API call timeout - time to wait for API requests to complete (default: 3000ms)
TEST_TIMEOUT_API=3000

# Long operation timeout - time to wait for complex operations (default: 10000ms)
TEST_TIMEOUT_LONG=10000

# SSO Login timeout - time to wait for manual SSO login completion (default: 300000ms / 5 minutes)
TEST_TIMEOUT_SSO_LOGIN=300000

# Playwright-specific timeouts
TEST_TIMEOUT_TEST=30000        # Maximum time for a single test (default: 30000ms)
TEST_TIMEOUT_ACTION=5000       # Timeout for Playwright actions like click, fill (default: 5000ms)

# CI environment timeout multiplier (applied automatically when CI=true)
# Set to 2.0 to double all timeouts in CI environments (default: 2)
TEST_TIMEOUT_MULTIPLIER=2
